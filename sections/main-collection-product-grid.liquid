          aria-labelledby="verticalTitle"
          class="facets-wrapper facets-wrapper--sticky hide-filters
          {% unless section.settings.enable_filtering %}
               facets-wrapper--no-filters
          {% endunless %}
          {% if section.settings.filter_type != 'vertical' %}
             page-width
          {% endif %}
          {% if content_for_query_string contains 'from_quiz=true' or content_for_query_string contains 'from_quiz%3Dtrue' %}
             hide-filters
          {% endif %}"
          id="main-collection-filters"
          data-id="{{ section.id }}">

          {% comment %} {% render 'facets',
                                                                                                                                                                                                            results: collection,
                                                                                                                                                                                                            enable_filtering: section.settings.enable_filtering,
                                                                                                                                                                                                            enable_sorting: section.settings.enable_sorting,
                                                                                                                                                                                                            filter_type: section.settings.filter_type,
                                                                                                                                                                                                            paginate: paginate
                                                                                                                                                                          %} {% endcomment %}
        </aside>
    {%- endif -%}

      <!-- new filters -->
      {% render 'new-filters' %}

      {% comment %} <p class="product-count-main-store">מספר מוצרים: {{ collection.products_count }}</p> {% endcomment %}

      <div
        class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        id="ProductGridContainer"
        {% if settings.animations_reveal_on_scroll %}
        data-cascade
        {% endif %}>
        {%- if collection.products.size == 0 -%}
          <div
            class="collection collection--empty page-width"
            id="product-grid"
            data-id="{{ section.id }}">
            <div class="loading-overlay gradient"></div>
            <div class="title-wrapper center">
              <h2 class="title title--primary">
                {{ 'sections.collection_template.empty' | t -}}
                <br>
                {{
                  'sections.collection_template.use_fewer_filters_html' | t: link: collection.url, class: 'underlined-link link'
                }}
              </h2>
            </div>
          </div>
        {%- else -%}
          <div class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}">
            <div class="loading-overlay gradient"></div>
            <ul
              id="product-grid"
              data-id="{{ section.id }}"
              class="
                grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                grid--3-col-desktop
                {% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}
              ">
              {% assign skip_card_product_styles = false %}
              {% assign all_products = collection.products %}
              {% assign max_products = 7 %}

              {%- liquid
                # theme-check-disable
                capture content_for_query_string
                  echo content_for_header
                endcapture
              -%}

              {% comment %} Check if randomization should be applied {% endcomment %}
              {% if content_for_query_string contains 'from_quiz=true' or content_for_query_string contains 'from_quiz%3Dtrue' %}
                {% comment %} Create a shuffled list of product indices {% endcomment %}
                {% assign shuffled_indices = '' %}
                {% assign product_count = all_products.size %}

                {% comment %} Generate random values and map them to product indices {% endcomment %}
                {% for i in (1..product_count) %}
                  {% assign random_value = 'now' | date: '%s%N' | plus: forloop.index | modulo: 1000000 %}
                  {% assign shuffled_indices = shuffled_indices | append: random_value | append: ':' | append: forloop.index0 | append: ',' %}
              {% endfor %}

                {% comment %} Sort the shuffled indices and take top 7 {% endcomment %}
                {% assign sorted_indices = shuffled_indices | split: ',' | sort %}
                {% assign top_indices = '' %}
                {% for sorted_item in sorted_indices limit: max_products %}
                  {% if sorted_item != '' %}
                    {% assign index_parts = sorted_item | split: ':' %}
                    {% if index_parts.size == 2 %}
                      {% assign top_indices = top_indices | append: index_parts[1] | append: ',' %}
                    {% endif %}
                  {% endif %}
              {% endfor %}

                {% comment %} Display products in shuffled order {% endcomment %}
                {% assign top_indices_array = top_indices | split: ',' %}
                {% for index_str in top_indices_array %}
                  {% if index_str != '' %}
                    {% assign product_index = index_str | plus: 0 %}
                    {% assign product = all_products[product_index] %}
                    {% if product %}
                      {% assign lazy_load = false %}
                      {%- if forloop.index > 2 -%}
                        {%- assign lazy_load = true -%}
                      {%- endif -%}
                      <li
                        class="grid__item grid-item-feed {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                        data-prep-methods="{{ product.metafields.custom.coffee_taste }} {{ product.metafields.custom.coffee_prep_methods | escape }}"
                        {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ forloop.index }};"
                        {% endif %}>
                      {% render 'card-product'
                        , card_product: product
                        , media_aspect_ratio: section.settings.image_ratio
                        , image_shape: section.settings.image_shape
                        , show_secondary_image: section.settings.show_secondary_image
                        , show_vendor: section.settings.show_vendor
                        , show_rating: section.settings.show_rating
                        , lazy_load: lazy_load
                        , skip_styles: skip_card_product_styles
                        , quick_add: section.settings.quick_add
                        , section_id: section.id
                      %}
                        {% comment %} <hr class="card-product-divider"/> {% endcomment %}
                        {% render 'price'
                          , product: product %}
                      </li>
                      {%- assign skip_card_product_styles = true -%}
                    {% endif %}
                  {% endif %}
                {% endfor %}
              {% else %}
                {% comment %} Display products in normal order {% endcomment %}
                {%- for product in all_products -%}
                  {% assign lazy_load = false %}
                  {%- if forloop.index > 2 -%}
                    {%- assign lazy_load = true -%}
                  {%- endif -%}
                  <li
                    class="grid__item grid-item-feed {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    data-prep-methods="{{ product.metafields.custom.coffee_taste }} {{ product.metafields.custom.coffee_prep_methods | escape }}"
                    {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ forloop.index }};"
                    {% endif %}>
                    {% render 'card-product'
                      , card_product: product
                      , media_aspect_ratio: section.settings.image_ratio
                      , image_shape: section.settings.image_shape
                      , show_secondary_image: section.settings.show_secondary_image
                      , show_vendor: section.settings.show_vendor
                      , show_rating: section.settings.show_rating
                      , lazy_load: lazy_load
                      , skip_styles: skip_card_product_styles
                      , quick_add: section.settings.quick_add
                      , section_id: section.id
                    %}
                    {% comment %} <hr class="card-product-divider"/> {% endcomment %}
                    <div class="main-collection-cart-bottom-wrapper">
                      <div class="main-collention-price-wrapper">
                        {% render 'price'
                          , product: product
                          , render_weight: true %}
                      </div>


                      <div class="main-collection-add-to-cart-wrapper">
                        {%- form 'product'
                          , product
                          , class: 'form product-form--quick-add js-quick-add-form'
                          , data-type: 'add-to-cart-form' -%}
                          <input
                            type="hidden"
                            name="id"
                            value="{{ product.selected_or_first_available_variant.id }}"
                            class="product-variant-id"
                            {% if product.selected_or_first_available_variant.available == false %}
                            disabled{% endif %}>
                          <button
                            id="ProductSubmitButton-add"
                            type="submit"
                            name="add"
                            class="add-to-cart-catalogue-btn">
                            <img
                              class="add-to-cart-catalog-img"
                              src="{{ 'add-to-cart-catalog.png' |  asset_url }}"
                              alt="add to cart icon" />
                            {{ 'products.product.add_to_cart' | t }}
                          </button>
                        {%- endform -%}
                      </div>
                    </div>
                  </li>
                  {%- assign skip_card_product_styles = true -%}
                {%- endfor -%}
              {% endif %}
            </ul>

            {% unless content_for_query_string contains 'from_quiz=true' or content_for_query_string contains 'from_quiz%3Dtrue' %}
              {%- if paginate.pages > 1 -%}
                {% render 'pagination'
                  , paginate: paginate
                  , anchor: '' %}
              {%- endif -%}
            {%- endunless -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endpaginate -%}
  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>

<script>

  document.addEventListener('DOMContentLoaded', function () {
    // Intercept quick-add product forms and submit via the same AJAX flow
    // used by `product-form.js` so the cart-drawer updates consistently.
    document.addEventListener('submit', function (event) {
      const form = event.target;

      if (!form.classList || !form.classList.contains('js-quick-add-form')) return;

      event.preventDefault();

      const submitButton = form.querySelector('[type="submit"]');
      if (submitButton) {
        submitButton.setAttribute('aria-disabled', 'true');
        submitButton.classList.add('loading');
        const spinner = form.querySelector('.loading__spinner');
        if (spinner) spinner.classList.remove('hidden');
      }

      const config = fetchConfig('javascript');
      config.headers['X-Requested-With'] = 'XMLHttpRequest';
      delete config.headers['Content-Type'];

      const formData = new FormData(form);

      const cart = document.querySelector('cart-notification') || document.querySelector('cart-drawer');
      if (cart) {
        // Ask cart which sections to render (matches product-form behavior)
        try {
          formData.append(
            'sections',
            cart.getSectionsToRender().map((section) => section.id)
          );
          formData.append('sections_url', window.location.pathname);
          if (typeof cart.setActiveElement === 'function') cart.setActiveElement(document.activeElement);
        } catch (e) {
          // ignore if cart API is different
        }
      }

      config.body = formData;

      fetch(`${routes.cart_add_url}`, config)
        .then((response) => response.json())
        .then((responseJson) => {
          if (responseJson.status) {
            // Error
            publish(PUB_SUB_EVENTS.cartError, {
              source: 'quick-add',
              productVariantId: formData.get('id'),
              errors: responseJson.errors || responseJson.description,
              message: responseJson.message,
            });
            // fallback: show alert
            try { alert(responseJson.description || responseJson.message || 'הוספת פריט נכשלה'); } catch (e) {}
            return;
          }

          if (!cart) {
            // No cart UI on page - nothing more to do (avoid redirect)
            return;
          }

          // Notify rest of theme and render updated cart sections
          publish(PUB_SUB_EVENTS.cartUpdate, {
            source: 'quick-add',
            productVariantId: formData.get('id'),
            cartData: responseJson,
          });

          // Show a toast message that the product was added
          showCartToast();

          // Update cart-drawer HTML in the background without opening the drawer
          fetch(`${window.routes.cart_url}?section_id=cart-drawer`)
            .then((response) => response.text())
            .then((html) => {
              const tempDiv = document.createElement('div');
              tempDiv.innerHTML = html;
              const newDrawer = tempDiv.querySelector('#CartDrawer');
              const drawer = document.getElementById('CartDrawer');
              if (drawer && newDrawer) {
                drawer.innerHTML = newDrawer.innerHTML;
              }
            });

          function showCartToast() {
            let toast = document.getElementById('cart-toast-message');
            if (!toast) {
              toast = document.createElement('div');
              toast.id = 'cart-toast-message';
              toast.style.position = 'fixed';
              toast.style.bottom = '32px';
              toast.style.left = '50%';
              toast.style.transform = 'translateX(-50%)';
              toast.style.background = '#222';
              toast.style.color = '#fff';
              toast.style.padding = '14px 32px';
              toast.style.borderRadius = '24px';
              toast.style.fontSize = '1rem';
              toast.style.zIndex = '9999';
              toast.style.boxShadow = '0 2px 16px rgba(0,0,0,0.15)';
              toast.style.opacity = '0';
              toast.style.transition = 'opacity 0.3s';
              document.body.appendChild(toast);
            }
            toast.textContent = 'המוצר נוסף לעגלה';
            toast.style.opacity = '1';
            setTimeout(() => {
              toast.style.opacity = '0';
            }, 1800);
          }
        })
        .catch((e) => {
          console.error('Quick add failed', e);
          publish(PUB_SUB_EVENTS.cartError, { source: 'quick-add', message: e && e.message });
          try { alert(e && e.message ? e.message : 'שגיאה בהוספת המוצר'); } catch (err) {}
        })
        .finally(() => {
          if (submitButton) {
            submitButton.classList.remove('loading');
            submitButton.removeAttribute('aria-disabled');
            const spinner = form.querySelector('.loading__spinner');
            if (spinner) spinner.classList.add('hidden');
          }
        });
    });
  });

</script>

