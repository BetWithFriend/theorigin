
<!-- snippets/product-collection-info.liquid -->
{%- if free_shipping.value > 0 -%}
{% comment %} <div class="product-vendor-shipping-info">
    <p><b>משלוח חינם</b> מעל {{ free_shipping.value }} ש״ח בבית הקלייה {{ vendor_name }}</p>
</div>  {% endcomment %}
{%- endif -%}
<div class="product-collection-wrapper">
    <div>
        <img src="{{ vendor_logo.value | img_url: 'small' }}" alt="{{ product.featured_image.alt | escape }}">
    </div>
    <div class="collection-text">
        {{ vendor_description.value }}
    </div>
 </div>

 <style>
    .product-collection-wrapper {
        height: 105px;
        width: 100%;
        background-color: #DAD7D1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        /* flex-direction: row-reverse; */
        padding: 16px 24px;
    }

    .collection-text {
        font-family: 'Noto Sans', sans-serif;
        font-size: 16px;
        font-weight: 400;
        line-height: 22px;
        color: #1C201D;
        text-align: right;
    }

    .product-vendor-shipping-info {
        text-align: center;
        background-color: #e3e0da;
        padding: 20px;
        padding-top: 0px;
    }

    .product-vendor-shipping-info p {
        margin: 0;
        padding: 0;
        background-color: #DAD7D1;
        border-radius: 20px;
        padding: 4px;
    }

    @media (min-width: 769px) {
        .product-vendor-shipping-info {
            display:none;
        }
    }
 </style>