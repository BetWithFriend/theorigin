{% comment %}
  Renders cart drawer with free shipping per vendor logic

  Usage:
  {% render 'cart-drawer' %}
{% endcomment %}

{{ 'quantity-popover.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
{% comment %} {{ 'cart-shipping.js' | asset_url | script_tag }}</script> {% endcomment %}
<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>

<style>
  .drawer {
    visibility: hidden;
  }
  .free-shipping-notice {
    font-family: 'Noto Sans', sans-serif;
    color: #1C201D;
    font-weight: 400;
    font-size: 14px;
    line-height: 25px;
    text-align: center;
    /* background-color: #C4C0BC; */
    /* border-radius: 0px 0px 8px 8px; */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2px;
    {% comment %} margin-bottom: 25px; {% endcomment %}
     margin-bottom: 5px;
  }

  .free-shipping-notice.free {
    font-weight: 700;
    /* position: fixed;
    width: 95%;
    background-color: #F5F4F2;
    z-index: 9999; */
  }
/* 
  .free-shipping-notice-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 8px;
    position: fixed;
    width: 95%;
    background-color: #F5F4F2;
    z-index: 9999;
  } */
  .shipping-crossed-out {
    text-decoration: line-through;
    color: #999;
  }
  .cart-icon-delivery {
    width: 20px;
    margin-left: 10px;
  }

  .cart-items-details-wrapper {
    display: flex;
    /* align-items: center; */
    justify-content: space-between;
    width: 100%;
  }

</style>

<cart-drawer class="drawer{% if cart == empty %} is-empty{% endif %}">
  <div id="CartDrawer" class="cart-drawer"  dir="rtl">
    <div id="CartDrawer-Overlay" class="cart-drawer__overlay"></div>
    <div
      class="drawer__inner gradient color-{{ settings.cart_color_scheme }}"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.cart.title' | t }}"
      tabindex="-1"
    >
      {%- if cart == empty -%}
        <div class="drawer__inner-empty">
          <div class="cart-drawer__warnings center{% if settings.cart_drawer_collection != blank %} cart-drawer__warnings--has-collection{% endif %}">
            <div class="cart-drawer__empty-content">
              <img class="cart-empty-img" src="{{ 'cart-empty-icon.png' | asset_url }}" alt="empty cart image"/>
              <h2 class="cart__empty-text">{{ 'sections.cart.empty' | t }}</h2>
              <button
                class="drawer__close"
                type="button"
                onclick="this.closest('cart-drawer').close()"
                aria-label="{{ 'accessibility.close' | t }}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-close.svg' | inline_asset_content -}}
                </span>
              </button>
             

              {%- if shop.customer_accounts_enabled and customer == null -%}
                <p class="cart__login-title h3">{{ 'sections.cart.login.title' | t }}</p>
                <p class="cart__login-paragraph">
                  {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
                </p>
              {%- endif -%}
            </div>
          </div>
          {%- if settings.cart_drawer_collection != blank -%}
            <div class="cart-drawer__collection">
              {% render 'card-collection', card_collection: settings.cart_drawer_collection, columns: 1 %}
            </div>
          {%- endif -%}
        </div>
         <button  
            class="button empty-cart-btn"
            onclick="this.closest('cart-drawer').close()">
              {{ 'general.continue_shopping' | t }}
         </button>
      {%- endif -%}
      <div class="drawer__header">
        <h2 class="drawer__heading">{{ 'sections.cart.title' | t }}</h2>
        <button
          class="drawer__close"
          type="button"
          onclick="this.closest('cart-drawer').close()"
          aria-label="{{ 'accessibility.close' | t }}"
        >
          <span class="svg-wrapper">
            {{- 'icon-close.svg' | inline_asset_content -}}
          </span>
        </button>
      </div>
      <hr class="cart-page-title-divider"/>
      <cart-drawer-items
        {% if cart == empty %}
          class=" is-empty"
        {% endif %}
      >
        <form
          action="{{ routes.cart_url }}"
          id="CartDrawer-Form"
          class="cart__contents cart-drawer__form"
          method="post"
        >
          <div id="CartDrawer-CartItems" class="drawer__contents js-contents">
          {%- if cart != empty -%}
          {% comment %} Show free shipping progress bar {% endcomment %}
          {%- assign free_shipping_threshhold = 24900 -%}
          {%- assign qualifies_free_shipping = false -%}
          {%- assign cart_total_price = 0 -%}
          {%- assign shipping_price = 39 -%}
          {%- assign shipping_items_paid = 0 -%}
          {%- for item in cart.items -%}
              {%- assign cart_total_price = cart_total_price | plus: item.final_line_price -%}
              {%- assign shipping_items_paid = shipping_items_paid | plus: 1 -%}
          {%- endfor -%}

          {%- assign progress_percentage = cart_total_price | times: 100 | divided_by: free_shipping_threshhold -%}

          {%- if cart_total_price >= free_shipping_threshhold -%}
              {%- assign qualifies_free_shipping = true -%}
              {%- if progress_percentage > 100 -%}
                {%- assign progress_percentage = 100 -%}
              {%- endif -%}
          {%- endif -%}
                {%- if qualifies_free_shipping -%}
                <div class="free-shipping-notice-wrapper">
                  <div class="free-shipping-cart-icon-wrapper">
                    <img class="free-shipping-cart-icon" src="{{ 'shipping-cart-icon.png' |  asset_url }}" alt="cart icon"/>
                    <span class="cart-badge">{{ cart.item_count }}</span>
                  </div>
                    <div class="free-shipping-notice free">{{ 'sections.cart.free_shipping' | t | default: 'משלוח חינם!' }}</div>
                    {% comment %} <div class="shipping-progress-bar-free">&nbsp;</div> {% endcomment %}
                    <div class="shipping-progress-bar" style="--progress: {{ progress_percentage }}%;">
                        {% comment %} <img class="shipping-progress-bar-track" src="{{ 'free-shipping-track.png' |  asset_url }}" alt="delivery icon"/> {% endcomment %}
                    </div>
                </div>
                  {%- else -%}
                  <div class="free-shipping-notice-wrapper">
                    <div class="free-shipping-cart-icon-wrapper">
                      <img class="free-shipping-cart-icon" src="{{ 'shipping-cart-icon.png' |  asset_url }}" alt="cart icon"/>
                      <span class="cart-badge">{{ cart.item_count }}</span>
                    </div>
                    <div class="free-shipping-notice">
                      {%- assign remaining_for_free = free_shipping_threshhold | minus: cart_total_price -%}
                      {% assign formatted_amount = remaining_for_free | money %}
                      {{ 'sections.cart.free_shipping_text' | t: amount: formatted_amount }}
                    </div>
                     
                     <div class="shipping-progress-bar" style="--progress: {{ progress_percentage }}%;">
                        {% comment %} <img class="shipping-progress-bar-track" src="{{ 'free-shipping-track.png' |  asset_url }}" alt="delivery icon"/> {% endcomment %}
                     </div>
                  </div>
                {%- endif -%}
            {%- assign vendors = "" -%}
            {% comment %} {%- assign shipping_price = 0 -%}
            {% assign canopy_shipping = 39 %}
            {% assign blooms_shipping = 39 %}
            {% assign youneedcoffee_shipping = 39 %}
            {% assign coffeeorg_shipping = 39 %}
            {% assign coffeeculture_shipping = 39 %} {% endcomment %}
            
            {%- comment -%} Free shipping thresholds in cents {%- endcomment -%}
            {% comment %} {% assign canopy_free_shipping_threshold = 19500 %}
            {% assign blooms_free_shipping_threshold = 22000 %}
             {% assign coffeeculture_free_shipping_threshold = 30000 %}
            {% assign coffeeorg_free_shipping_threshold = 25000 %} {% endcomment %}
            
            {%- comment -%} Calculate vendor totals {%- endcomment -%}
            {%- assign vendor_totals = blank -%}
            
              {%- for item in cart.items -%}
                {%- unless vendors contains item.vendor -%}
                  {%- assign vendors = vendors | append: item.vendor | append: "," -%}
                {%- endunless -%}
              {%- endfor -%}

              {% comment %}
                code for getting vendor info from product metafields
              {% endcomment %}

              {%- assign vendor_keys = '' -%}
              {%- assign vendor_names = '' -%}
              {%- assign vendor_logos = '' -%}
              {%- for item in cart.items -%}
                {%- assign vendor_key = item.vendor -%}
                {%- assign full_vendor_name = item.product.metafields.vendor_info.coffee_vendor.value.vendor_name.value -%}
                {%- assign logo_vendor = item.product.metafields.vendor_info.coffee_vendor.value.vendor_logo | image_url  -%}
                {%- unless vendor_keys contains vendor_key -%}
                  {%- assign vendor_keys = vendor_keys | append: vendor_key | append: '||' -%}
                  {%- assign vendor_names = vendor_names | append: full_vendor_name | append: '||' -%}
                  {%- assign vendor_logos = vendor_logos | append: logo_vendor | append: '||' -%}
                {%- endunless -%}
              {%- endfor -%}
              
              {%- assign vendor_keys_array = vendor_keys | split: '||' -%}
              {%- assign vendor_names_array = vendor_names | split: '||' -%}
              {%- assign vendor_logos_array = vendor_logos | split: '||' -%}
              
              
            {%- assign vendor_array = vendors | split: "," | uniq | sort -%}
            {%- assign vendor_count = vendor_array | size-%}
            {% comment %} {%- assign shipping_items_paid = 0 -%} {% endcomment %}

            <div class="cart-items-wrapper">
              {%- for vendor in vendor_array -%}            

                {% comment %} Find the extra vendor data {% endcomment %}

                {%- for i in (0..vendor_keys_array.size) -%}
                  {%- assign vendor_key = vendor_keys_array[i] -%}
                  {%- if vendor_key == vendor -%}
                    {%- assign vendor_name = vendor_names_array[i] -%}
                    {%- assign current_vendor_logo = vendor_logos_array[i] -%}
                  {%- endif -%}
                {%- endfor -%}
                {% comment %} End Extra data {% endcomment %}

                {%- assign vendor_has_items = false -%}
                {%- assign vendor_total = 0 -%}
                
                {%- comment -%} Calculate total for this vendor {%- endcomment -%}
                {%- for item in cart.items -%}
                  {%- if item.vendor == vendor -%}
                    {%- assign vendor_has_items = true -%}
                    {%- assign vendor_total = vendor_total | plus: item.final_line_price -%}
                  {%- endif -%}
                {%- endfor -%}
                
                {%- comment -%} Determine if vendor qualifies for free shipping {%- endcomment -%}
                {% comment %} {%- assign vendor_qualifies_free_shipping = false -%}
                {%- assign vendor_shipping_cost = 0 -%}
                {%- assign vendor_free_threshold = 0 -%}
                
                {%- if vendor == 'canopy' -%}
                  {%- assign vendor_shipping_cost = canopy_shipping -%}
                  {%- assign vendor_free_threshold = canopy_free_shipping_threshold -%}
                  {%- if vendor_total >= canopy_free_shipping_threshold -%}
                    {%- assign vendor_qualifies_free_shipping = true -%}
                  {%- endif -%}
                {%- elsif vendor == 'blooms' -%}
                  {%- assign vendor_shipping_cost = blooms_shipping -%}
                  {%- assign vendor_free_threshold = blooms_free_shipping_threshold -%}
                  {%- if vendor_total >= blooms_free_shipping_threshold -%}
                    {%- assign vendor_qualifies_free_shipping = true -%}
                  {%- endif -%}
                {%- elsif vendor == 'youneedcoffee' -%}
                  {%- assign vendor_shipping_cost = youneedcoffee_shipping -%}
                  {%- assign vendor_free_threshold = 0 -%}
                  {%- assign vendor_qualifies_free_shipping = false -%}
                {%- elsif vendor == 'coffeeorg' -%}
                  {%- assign vendor_shipping_cost = coffeeorg_shipping -%}
                  {%- assign vendor_free_threshold = coffeeorg_free_shipping_threshold -%}
                  {%- if vendor_total >= coffeeorg_free_shipping_threshold -%}
                    {%- assign vendor_qualifies_free_shipping = true -%}
                  {%- endif -%}
                   {%- elsif vendor == 'coffeeculture' -%}
                  {%- assign vendor_shipping_cost = coffeeculture_shipping -%}
                  {%- assign vendor_free_threshold = coffeeculture_free_shipping_threshold -%}
                  {%- if vendor_total >= coffeeculture_free_shipping_threshold -%}
                    {%- assign vendor_qualifies_free_shipping = true -%}
                  {%- endif -%}
                {%- endif -%} {% endcomment %}
                
                {%- comment -%} Add to total shipping if not free {%- endcomment -%}
                {%- unless vendor_qualifies_free_shipping -%}
                  {%- assign shipping_price = shipping_price | plus: vendor_shipping_cost -%}
                {%- endunless -%}
                
                {%- if vendor_has_items -%}
                  <div class="cart-item-wrapper" data-vendor="{{ vendor }}"> 
                    {% comment %} <div class="cart-item-vendor-container">
                      <div class="cart-item-logo">
                        <img class="cart-item-logo-img" src="{{ current_vendor_logo |  image_url: 'small' }}" alt="{{ vendor_name }}"  width="42"/>
                      </div>
                      <div class="cart-item-vendor">{{ vendor_name |  upcase }}</div>
                    </div> {% endcomment %}
                    {%- for item in cart.items -%}
                      {%- if item.vendor == vendor -%}
                        <div class="cart-item" id="CartItem-{{ item.index | plus: 1 }}">
                          <div class="cart-item__media">
                            {% if item.image %}
                              <a href="{{ item.url }}" class="cart-item__link" aria-hidden="true" tabindex="-1"> </a>
                              <div class="cart-item__image-container gradient">
                                <img
                                  src="{{ item.image | image_url: width: 300 }}"
                                  class="cart-item__image"
                                  alt="{{ item.image.alt | escape }}"
                                  loading="lazy"
                                  width="150"
                                  height="{{ 150 | divided_by: item.image.aspect_ratio | ceil }}"
                                >
                              </div>
                            {% endif %}
                          </div>
                        <div class="cart-items-details-wrapper">
                          <div class="cart-item__details">
                            {%- if settings.show_vendor -%}
                              <p class="caption-with-letter-spacing">{{ item.product.vendor }}</p>
                            {%- endif -%}

                            <a href="{{ item.url }}" class="cart-item__name h4 break">{{ item.product.title | escape }}</a>
                
                            {% if item.product.price < 15000 %}
                            <dl class="cart-item-options-wrapper">
                              <!-- {{ item.product.price }} -->
                            
                              {%- unless item.product.has_only_default_variant -%}
                                {%- for option in item.options_with_values -%}
                                  <div class="product-option">
                                    <dt>{{ option.name }}:</dt>
                                    <dd>{{ option.value }}</dd>
                                  </div>
                                {%- endfor -%}
                              {%- endunless -%}
                            
                              
                              {%- assign first_property_printed = false -%}
                              {%- for property in item.properties -%}
                                {%- assign property_first_char = property.first | slice: 0 -%}
                                {%- if property.first == 'Weight' and property.last != blank and property_first_char != '_' -%}
                                  {%- if first_property_printed -%}
                                  <div class="product-option">/</div> 
                                  {%- endif -%}
                                  <div class="product-option">
                                    {{ property.last }}
                                  </div>
                                  {%- assign first_property_printed = true -%}
                                {%- endif -%}
                              {%- endfor -%} 
                              {% comment %} <div class="product-option">/</div>
                              <div class="product-option">
                                {{ item.original_price | times: item.quantity | money }}
                              </div> {% endcomment %}
                            </dl>
                           {% else %}
                            <dl class="cart-item-options-wrapper">
                              <div class="product-option">
                                    סט מוכן מראש
                                  </div>
                            </dl>
                            {% endif %}

                            {%- liquid
                              assign has_qty_rules = false
                              if item.variant.quantity_rule.increment > 1 or item.variant.quantity_rule.min > 1 or item.variant.quantity_rule.max != null
                                assign has_qty_rules = true
                              endif

                              assign has_vol_pricing = false
                              if item.variant.quantity_price_breaks.size > 0
                                assign has_vol_pricing = true
                              endif
                            -%}

                            {% comment %} <quantity-popover>
                              <div class="cart-item__quantity-wrapper quantity-popover-wrapper">
                                <label class="visually-hidden" for="Quantity-{{ item.index | plus: 1 }}">
                                  {{ 'products.product.quantity.label' | t }}
                                </label>
                                <div class="quantity-popover-container{% if has_qty_rules or has_vol_pricing %} quantity-popover-container--hover{% endif %}">
                                  {%- if has_qty_rules or has_vol_pricing -%}
                                    <button
                                      type="button"
                                      aria-expanded="false"
                                      class="quantity-popover__info-button quantity-popover__info-button--icon-only button button--tertiary small-hide medium-hide"
                                    >
                                      {{- 'icon-info.svg' | inline_asset_content -}}
                                    </button>
                                  {%- endif -%}
                                  <quantity-input class="quantity cart-quantity">
                                    <button class="quantity__button" name="minus" type="button" 
                                            data-vendor="{{ item.vendor }}" data-item-price="{{ item.final_price }}">
                                      <span class="visually-hidden">
                                        {{- 'products.product.quantity.decrease' | t: product: item.product.title | escape -}}
                                      </span>
                                      <span class="svg-wrapper">
                                        {{- 'icon-minus.svg' | inline_asset_content -}}
                                      </span>
                                    </button>
 
                                    <input
                                      class="quantity__input"
                                      data-quantity-variant-id="{{ item.variant.id }}"
                                      data-vendor="{{ item.vendor }}"
                                      data-item-price="{{ item.final_price }}"
                                      type="number"
                                      name="updates[]"
                                      value="{{ item.quantity }}"
                                      data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                                      min="0"
                                      data-min="{{ item.variant.quantity_rule.min }}"
                                      {% if item.variant.quantity_rule.max != null %}
                                        max="{{ item.variant.quantity_rule.max }}"
                                      {% endif %}
                                      step="{{ item.variant.quantity_rule.increment }}"
                                      aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                      id="Quantity-{{ item.index | plus: 1 }}"
                                      data-index="{{ item.index | plus: 1 }}"
                                    >
                                    <button class="quantity__button" name="plus" type="button"
                                            data-vendor="{{ item.vendor }}" data-item-price="{{ item.final_price }}">
                                      <span class="visually-hidden">
                                        {{- 'products.product.quantity.increase' | t: product: item.product.title | escape -}}
                                      </span>
                                      <span class="svg-wrapper">
                                        {{- 'icon-plus.svg' | inline_asset_content -}}
                                      </span>
                                    </button>
                                  </quantity-input>
                                </div>
                              </div>
                              
                              {%- if has_qty_rules or has_vol_pricing -%}
                                <button
                                  type="button"
                                  class="quantity-popover__info-button quantity-popover__info-button--icon-with-label button button--tertiary large-up-hide"
                                  aria-expanded="false"
                                >
                                  {{- 'icon-info.svg' | inline_asset_content -}}
                                  <span>
                                    {%- if has_vol_pricing -%}
                                      {{ 'products.product.volume_pricing.note' | t }}
                                    {%- elsif has_qty_rules -%}
                                      {{ 'products.product.quantity.note' | t }}
                                    {%- endif -%}
                                  </span>
                                </button>
                              {%- endif -%}
                              
                              {%- if has_vol_pricing or has_qty_rules -%}
                                <div
                                  class="cart-items__info global-settings-popup quantity-popover__info"
                                  tabindex="-1"
                                  hidden
                                >
                                  {%- if has_qty_rules == false -%}
                                    <span class="volume-pricing-label caption">
                                      {{- 'products.product.volume_pricing.title' | t -}}
                                    </span>
                                  {%- endif -%}
                                  <div class="quantity__rules caption">
                                    {%- if item.variant.quantity_rule.increment > 1 -%}
                                      <span class="divider">
                                        {{-
                                          'products.product.quantity.multiples_of'
                                          | t: quantity: item.variant.quantity_rule.increment
                                        -}}
                                      </span>
                                    {%- endif -%}
                                    {%- if item.variant.quantity_rule.min > 1 -%}
                                      <span class="divider">
                                        {{-
                                          'products.product.quantity.min_of'
                                          | t: quantity: item.variant.quantity_rule.min
                                        -}}
                                      </span>
                                    {%- endif -%}
                                    {%- if item.variant.quantity_rule.max != null -%}
                                      <span class="divider">
                                        {{-
                                          'products.product.quantity.max_of'
                                          | t: quantity: item.variant.quantity_rule.max
                                        -}}
                                      </span>
                                    {%- endif -%}
                                  </div>
                                  <button
                                    class="button-close button button--tertiary large-up-hide"
                                    type="button"
                                    aria-label="{{ 'accessibility.close' | t }}"
                                  >
                                    <span class="svg-wrapper">
                                      {{- 'icon-close.svg' | inline_asset_content -}}
                                    </span>
                                  </button>
                                  {%- if item.variant.quantity_price_breaks.size > 0 -%}
                                    <volume-pricing class="parent-display">
                                      <ul class="list-unstyled">
                                        <li>
                                          <span>{{ item.variant.quantity_rule.min }}+</span>
                                          {%- assign price = item.variant.price | money_with_currency -%}
                                          <span> {{ 'sections.quick_order_list.each' | t: money: price }}</span>
                                        </li>
                                        {%- for price_break in item.variant.quantity_price_breaks -%}
                                          <li>
                                            <span>
                                              {{- price_break.minimum_quantity -}}
                                              <span aria-hidden="true">+</span></span
                                            >
                                            {%- assign price = price_break.price | money_with_currency -%}
                                            <span> {{ 'sections.quick_order_list.each' | t: money: price }}</span>
                                          </li>
                                        {%- endfor -%}
                                      </ul>
                                    </volume-pricing>
                                  {%- endif -%}
                                </div>
                              {%- endif -%}
                              
                              <div class="cart-item__error" id="Line-item-error-{{ item.index | plus: 1 }}" role="alert">
                                <small class="cart-item__error-text"></small>
                                <span class="svg-wrapper">
                                  {{- 'icon-error.svg' | inline_asset_content -}}
                                </span>
                              </div>
                            </quantity-popover> {% endcomment %}

                            {%- if item.product.has_only_default_variant == false
                              or item.properties.size != 0
                              or item.selling_plan_allocation != null
                            -%}
                              <dl>
                                {%- if item.product.has_only_default_variant == false -%}
                                  {%- for option in item.options_with_values -%}
                                    <div class="product-option">
                                      <dt>{{ option.name }}:</dt>
                                      <dd>{{ option.value }}</dd>
                                    </div>
                                  {%- endfor -%}
                                {%- endif -%}
                              </dl>

                              <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                            {%- endif -%}

                            <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                              {%- for discount in item.line_level_discount_allocations -%}
                                <li class="discounts__discount">
                                  {{- 'icon-discount.svg' | inline_asset_content -}}
                                  {{ discount.discount_application.title | escape }}
                                </li>
                              {%- endfor -%}
                            </ul>
                          </div>
                          <div class="cart-items-actions">
                           {% comment %} quantity {% endcomment %}
                             <quantity-popover>
                              <div class="cart-item__quantity-wrapper quantity-popover-wrapper">
                                <label class="visually-hidden" for="Quantity-{{ item.index | plus: 1 }}">
                                  {{ 'products.product.quantity.label' | t }}
                                </label>
                                <div class="quantity-popover-container{% if has_qty_rules or has_vol_pricing %} quantity-popover-container--hover{% endif %}">
                                  {%- if has_qty_rules or has_vol_pricing -%}
                                    <button
                                      type="button"
                                      aria-expanded="false"
                                      class="quantity-popover__info-button quantity-popover__info-button--icon-only button button--tertiary small-hide medium-hide"
                                    >
                                      {{- 'icon-info.svg' | inline_asset_content -}}
