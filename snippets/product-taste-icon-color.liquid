<!-- snippets/product-taste-icon-color.liquid -->
<div class="selection-wrapper">
  <!-- Dynamic Text Section -->
  
 {% if tastes.size > 0 %}
  {% for taste in tastes %}
    <!-- Conditional Color -->
    {% case taste %}
      {% when 'Fruity' %}
      <span>פירותי</span>
        <span class="selection-color" style="background-color: #FFDF70;" aria-label="Yellow Indicator"></span>
      {% when 'Chocolate' %}
      <span>שוקולדי</span>
        <span class="selection-color" style="background-color: #8B4513;" aria-label="Brown Indicator"></span>
      {% when 'Sweet-Chocolate' %}
      <span>מתוק שוקולדי</span>
        <span class="selection-color" style="background-color: #C4823E;" aria-label="Orange Indicator"></span>
      {% when 'Sweet' %}
      <span>מתוק מאוזן</span>
        <span class="selection-color" style="background-color: #D60540;" aria-label="Red Indicator"></span>
      {% when 'Fruity-Sweet' %}
      <span>פירותי מתוק</span>
        <span class="selection-color" style="background-color: #FF974A;" aria-label="Orange Indicator"></span>
    {% endcase %}
  {% endfor %}
{% endif %}
</div>
    <!-- Conditional Icons -->
     {% comment %} <div class="selection-icons">
    {% if prep_methods.size > 0 %}
      {% for method in prep_methods %}
        {% assign updated_method = method | strip | remove: '"' %}
     
        {% case updated_method %}
          {% when 'Espresso' %}
          <img src="{{ 'dropdown-brew-Espresso-Machine.png' | asset_url }}" alt="Espresso Brew" class="icon" />
          {% when 'Black' %}
          <img src="{{ 'dropdown-brew-Turkish.png' | asset_url }}" alt="Turkish Brew" class="icon" />
          {% when 'Aeropress' %}
          <img src="{{ 'dropdown-brew-Chemex.png' | asset_url }}" alt="Chemex Brew" class="icon" />
          {% when 'MokaPot' %}
          <img src="{{ 'dropdown-brew-Moka.png' | asset_url }}" alt="Moka Brew" class="icon" />
          {% when 'Filter' %}
          <img src="{{ 'dropdown-brew-Filter.png' | asset_url }}" alt="Filter Brew" class="icon" />
        {% endcase %}
  
  {% endfor %}
{% endif %}
</div> {% endcomment %}
<div class="product-tastes-list">
  {% comment %} {{ coffee_tastes_list | join: ' | ' }} {% endcomment %}
  {% for taste in coffee_tastes_list %}      
    <div class="single-coffee-taste">{{ taste }}</div>
  {% endfor %}
</div>

<style>
.selection-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
  font-family: 'Noto Sans', sans-serif;
  flex-direction: row-reverse;
  line-height: 30px;
  font-size: 14px;
}

.selection-text {
  font-size: 16px;
  color: #333;
}

.selection-color {
  width: 16px;
  height: 16px;
  border-radius: 50%;
  display: inline-block;
}

.selection-icons {
  display: flex;
  gap: 4px;
  height: 30px;
  width: 100%;
  flex-wrap: wrap;
}

.selection-icons .icon {
  width: 24px;
  height: 24px;
}
  .product-taste-icons {
  /* margin-top: 10px; /* Add space between the image and the icons */
    /* text-align: center; */
    display: flex;
    align-items: start;
    justify-content: start;
    flex-direction: column;
    gap: 4px;
    white-space: nowrap;
    width: 100%;
    margin-bottom: 16px;
}

.product-taste-icons img {
  width: 24px; /* Ensure icons are a consistent size */
  height: 24px;
  /* margin: 0 5px;  */
}

.product-tastes-list {
  text-wrap: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: start;
  /* justify-content: center; */
  /* margin-bottom: 8px; */ */
}

.product-tastes-list.center {
  justify-content: center;
}

.product-tastes-list .single-coffee-taste {
  background-color: #E3E0DA;
  padding: 4px 8px;
  border-radius: 16px;
  margin: 2px;
  font-size: 14px;
}

@media screen and (min-width: 749px) {
  .product-tastes-list {
    justify-content: center;
    /* margin-right: 24px; */
  }
}
</style>