 <style>
    .product-taste-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 30px;
      width: 100%;
      margin-bottom: 20px;
      font-family: 'Noto Sans', sans-serif;
      font-weight: 300;
      font-size: 12px;
      position: relative;
    }

    .product-taste-earth,
    .product-taste-sweet-chocolate,
    .product-taste-sweet,
    .product-taste-fruity-sweet,
    .product-taste-fruity {
      height: 5px;
      width: 65px;
      padding: 2px 7px;
    }
    .product-taste-earth {
      background-color: #8B4513;
    }
    .product-taste-sweet-chocolate {
      background-color: #C4823E;
    }
    .product-taste-sweet {
      background-color: #d60540;
    }
    .product-taste-fruity-sweet {
      background-color: #FF974A;
    }
    .product-taste-fruity {
      background-color: #FFDF70;
    }
    .highlighted {
      border: 2px solid black;
      transform: scale(1.2);
    }
    .taste-text {
      padding-top: 14px;
    }

    .taste-indicator {
      top: 20px;
      position: absolute;
      width: 10px;
      height: 10px;
      background-color: transparent !important;
      /* border-radius: 50%;
      border: 2px solid #E3E0DA;
      box-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
      transition: left 0.3s ease-in-out;  */
    }

    .taste-indicator.earth { left: 79%; background-color: #1b4f72; } /* Left */
    .taste-indicator.Sweet-Chocolate { left: 64%; background-color: #8b4513; } /* 25% */
    .taste-indicator.Sweet { left: 49%; background-color: #d60540; } /* Middle */
    .taste-indicator.Fruity-Sweet { left: 34%; background-color: #c4823e; } /* 75% */
    .taste-indicator.Fruity { left: 19%; background-color: #ffdf70; } /* Right */
  </style>
  <div class="product-taste-wrapper" dir="rtl">
    <div class="product-taste-earth"> 
      <div class="color-block">
        <div class="taste-text">אדמתי</div>
      </div>
    </div>
    <div class="product-taste-sweet-chocolate"> </div>
    <div class="product-taste-sweet">
      <div class="color-block">
        <div class="taste-text">מתקתק</div>
      </div>
    </div>
    <div class="product-taste-fruity-sweet"> </div>
    <div class="product-taste-fruity">
      <div class="color-block">
        <div class="taste-text">פירותי</div>
      </div>
    </div>
  
    <img src="{{ 'taste-indicator.png' | asset_url }}"  class="taste-indicator {{ taste }}"  alt="taste-indicator"/>
  </div>